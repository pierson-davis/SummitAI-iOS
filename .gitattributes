# Auto detect text files and perform LF normalization
* text=auto

# Swift files
*.swift text eol=lf

# Python files
*.py text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.dmg binary
*.ipa binary

# Xcode files
*.xcodeproj/* text
*.xcworkspace/* text
*.pbxproj text
*.plist text
*.storyboard text
*.xib text

# Firebase
GoogleService-Info.plist text

# Keep line endings consistent
*.swift text eol=lf
*.py text eol=lf
*.md text eol=lf
